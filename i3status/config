general {
        colors = false
        interval = 1
}

#order += "ipv6"
order += "disk /"
#order += "disk /home"
order += "ethernet _first_"
order += "wireless _first_"
#order += "battery all"
#order += "load"
order += "volume master"
order += "tztime local"

wireless _first_ {
        format_up = " %ip (%essid)"
        format_down = " down"
}

ethernet _first_ {
        format_up = " %ip (%speed)"
        format_down = " down"
}

battery all {
        format = " %status %percentage"
}

tztime local {
        format = " %Y-%m-%d %H:%M:%S"
}

load {
        format = " %1min"
}

disk "/" {
        format = " / %avail"
}

disk "/home"{
	format = " /home %avail"
}

volume master {
	format = " %volume"
	format_muted = "  muted %volume"
	device = "pulse"
}
